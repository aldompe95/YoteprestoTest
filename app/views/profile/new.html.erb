<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="text-center">PROFILE</h2>
      <p class="text-center">Fill all the data so you can ask for a requisition</p>
    </div>
    <%= form_for @profile, :url => {:action => "create"} do |f| %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <div class="col-md-4 col-md-offset-2">
        <div class="form-group">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, :value => @fb_data.first_name, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :second_name %><br />
          <%= f.text_field :second_name, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-4 col-md-offset-2">
        <div class="form-group">
          <%= f.label :first_last_name %><br />
          <%= f.text_field :first_last_name, :value => @fb_data.last_name, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :second_last_name %><br />
          <%= f.text_field :second_last_name, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-4 col-md-offset-2">
        <div class="form-group">
        <%= f.label :birth_date %><br />
        <div class='input-group date' id='datetimepicker1'>
          <%= f.text_field :birth_date, :value => @fb_data.birthday, class: "form-control",:data => {:provide => "datepicker"} %>
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
      </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :CURP %><br />
          <%= f.text_field :curp, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-4 col-md-offset-2">
        <div class="form-group">
          <%= f.label :RFC %><br />
          <%= f.text_field :rfc, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :gender %><br />
          <%= f.text_field :gender, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-4 col-md-offset-2">
        <div class="form-group">
          <%= f.label :birth_state %><br />
          <%= f.select :birth_state, options_for_select(us_states, @profile.birth_state), {:include_blank => true}, {class: 'form-control'} %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :phone_number %><br />
          <%= f.text_field :phone_number, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-4 col-md-offset-2">
        <div class="form-group">
          <%= f.submit 'Save', class: "btn btn-success" %>
          <%= link_to 'Nevermind', root_path, class: 'btn btn-warning', type: "number" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
